# Global environment variables for local development
# Copy this file to .env and update values as needed

# Database configuration
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=postgres123

# RabbitMQ configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_VHOST=/

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Jaeger configuration
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_SAMPLER_TYPE=const
JAEGER_SAMPLER_PARAM=1

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://localhost:5001
USER_SERVICE_URL=http://localhost:8000
TODO_SERVICE_URL=http://localhost:8004
TAG_SERVICE_URL=http://localhost:8001
NOTIFICATION_SERVICE_URL=http://localhost:8002
ADMIN_SERVICE_URL=http://localhost:8003

# JWT Configuration
JWT_ISSUER=todo-app
JWT_AUDIENCE=todo-app-clients
JWT_KEY_ROTATION_DAYS=90

# CORS
CORS_ORIGINS=http://localhost:3000
